<header data-view-more-target="header"
        class="flex flex-col gap-3 items-center w-fit px-4 py-2 rounded-3xl mx-auto lg:m-0 mt-8 h-dvh lg:h-fit pt-12">
  <%= render Avatar.new %>

  <h1 class="text-2xl pt-2">
    <a href="/" class="hover:text-primary font-bold">
      <%= @metadata[:title] %>
    </a>
  </h1>
  <div>
    Ruby on Rails Engineer
  </div>

  <%= render Socials.new(metadata: @metadata) %>

  <button type="button"
          data-action="click->view-more#go"
          class="lg:hidden absolute bottom-10 flex flex-col gap-5 items-center w-screen">
    <span class="text-lg">view more</span>

    <svg width="55" height="29" viewBox="0 0 55 29" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M2 2L27.5 16.9268L53 2M27.5 16.9268L53 2" stroke="#404040" stroke-width="2.07317" stroke-linecap="round" stroke-linejoin="round"/>
      <path d="M2 12.1585L27.5 27.0854L53 12.1585M27.5 27.0854L53 12.1585" stroke="#404040" stroke-width="2.07317" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </button>
</header>
